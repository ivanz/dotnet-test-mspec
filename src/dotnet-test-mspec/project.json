{
    "version": "0.1-ivanz2",
    "description": "'dotnet test' support for Machine.Specifications (MSpec).",
    "authors": [
        "Ivan Zlatev"
    ],
    "packOptions": {
        "projectUrl": "https://github.com/ivanz/dotnet-test-mspec",
        "repository": {
            "type": "git",
            "url": "https://github.com/ivanz/dotnet-test-mspec"
        },
        "tags": [ "mspec", "machine.specifications", "test", "tdd" ],
        "requireLicenseAcceptance": false,
        "licenseUrl": "https://github.com/ivanz/dotnet-test-mspec/blob/master/LICENSE.txt"
    },
    "buildOptions": {
        "emitEntryPoint": true
    },
    "runtimes": {
        "win10-arm": {},
        "win10-x86": {},
        "win10-x64": {}
    },
    "frameworks": {
        "net45": {
            "frameworkAssemblies": {
                "System.Xml": "",
                "System.Xml.Linq": ""
            },
            "dependencies": {
                "Microsoft.NETCore.Platforms": {
                    "version": "1.*",
                    "type":"build"
                }
            }
        },
        "netcoreapp1.0": {
            "buildOptions": {
                "define": [
                    "NETCORE"
                ]
            },
            "dependencies": {
                "Microsoft.NETCore.App": {
                    "version": "1.0.0",
                    "type": "platform"
                },
                "System.Xml.XPath": "4.0.1",
                "System.Xml.XPath.XDocument": "4.0.1"
            }
        },
        "uap10.0": {
            "buildOptions": {
                "define": [
                    "UWP"
                ]
            },
            "dependencies": {
                "Microsoft.NETCore.UniversalWindowsPlatform": "5.1.0",
                "System.Console": "4.0.0",
                "System.Xml.XPath": "4.0.1",
                "System.Xml.XPath.XDocument": "4.0.1",
                "System.Runtime.Extensions":"4.1.0",
                "Microsoft.Win32.Primitives": "4.0.1" // solves warning about downgrade
            }
        }
    }
}
